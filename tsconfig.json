{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "removeComments": true,
        "skipDefaultLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "newLine": "lf",
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*"
    ]
}